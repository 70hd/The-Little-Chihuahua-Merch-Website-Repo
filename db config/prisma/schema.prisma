generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Size {
  id        Int     @id @unique @default(autoincrement())
  size      String
  productId Int
  inventory Int
  status    STATUS?
  product   Product @relation(fields: [productId], references: [id])

  @@index([productId], map: "Size_productId_fkey")
}

model Image {
  id        Int     @id @unique @default(autoincrement())
  image     String
  productId Int
  alt       String
  product   Product @relation(fields: [productId], references: [id])

  @@index([productId], map: "Image_productId_fkey")
}

model Prices {
  id        Int     @id @unique @default(autoincrement())
  price     Int
  productId Int
  product   Product @relation(fields: [productId], references: [id])

  @@index([productId], map: "Prices_productId_fkey")
}

model Product {
  id           Int      @id @unique @default(autoincrement())
  title        String   @unique
  description  String
  colorHex     String
  colorName    String
  status       STATUS?
  inventory    Int
  images       Image[]
  priceOptions Prices[]
  sizeOptions  Size[]
  restockNotification RestockNotification? @relation("ProductToRestock")
}

model Contact {
  id             Int     @id @default(autoincrement())
  name           String
  email          String
  phoneNumber    String?  // optional
  selectLocation String?  // optional
  comments       String
}

enum STATUS {
  AVAILABLE
  LOW_STOCK
  OUT_OF_STOCK
}

model RestockNotification {
  id        Int     @id @default(autoincrement())
  email     String
  productId Int     @unique
  product   Product @relation("ProductToRestock", fields: [productId], references: [id])
}